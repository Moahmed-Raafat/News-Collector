<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from newspaper name"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textColor="@color/color4"
        android:id="@+id/textView1"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category1"
        android:id="@+id/category1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category2"
        android:id="@+id/category2"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category3"
        android:id="@+id/category3"
        android:layout_below="@+id/category1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category4"
        android:id="@+id/category4"
        android:layout_below="@+id/category2"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category5"
        android:id="@+id/category5"
        android:layout_below="@+id/category3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category6"
        android:id="@+id/category6"
        android:layout_below="@+id/category4"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        />




    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycleView"
        android:layout_below="@+id/category5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>